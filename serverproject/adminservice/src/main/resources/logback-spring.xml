<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Appender gửi log sang OpenTelemetry -->
    <appender name="OTLP" class="io.opentelemetry.instrumentation.logback.appender.v1_0.OpenTelemetryAppender">
        <!-- captureMdcAttributes sẽ gửi các giá trị MDC (traceId, spanId) -->
        <captureMdcAttributes>*</captureMdcAttributes>
        <captureMarkerAttribute>true</captureMarkerAttribute>
    </appender>

    <!-- Appender ghi log ra console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- %msg sẽ là JSON string từ code -->
            <pattern>%d{HH:mm:ss} %-5level %logger{20} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger đặc biệt chỉ gửi sang OpenTelemetry -->
    <!-- Hiện đang additivity="false" => log từ SimpleLoggingFilter sẽ CHỈ gửi sang OTLP,
         nếu muốn in ra console nữa, đổi additivity thành true hoặc xóa thuộc tính này -->
    <logger name="org.example.logging.SimpleLoggingFilter" level="INFO" additivity="false">
        <appender-ref ref="OTLP"/>
    </logger>

    <!-- Logger chính cho toàn bộ ứng dụng -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="OTLP"/>
    </root>

</configuration>
